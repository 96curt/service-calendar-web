  "version": "0.2.0",
  "configurations": [
  {
    "name": "npm-start",
    "command": "npm start",
    "request": "launch",
    "type": "node-terminal",

  },
  {
    "name":"Launch-Chrome",
    "type": "chrome",
    "request": "launch",
    "url": "http://localhost:4200",
    "webRoot": "${workspaceFolder}"
  },
  {
    "name":"Launch-Edge",
    "type": "msedge",
    "request": "launch",
    "url": "http://localhost:4200",
    "webRoot": "${workspaceFolder}"
  }
      
  ],
  "compounds": [
    {
      "name": "Debug",
      "configurations": ["Launch-Edge","npm-start"],
      "stopAll": true
    }
  ]
}
